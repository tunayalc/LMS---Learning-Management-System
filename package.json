{
  "name": "lms-platform",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "env:detect": "powershell -ExecutionPolicy Bypass -File scripts\\detect_env.ps1",
    "dev:api": "powershell -ExecutionPolicy Bypass -File scripts\\run_api_local.ps1",
    "dev:web": "powershell -ExecutionPolicy Bypass -File scripts\\run_web_local.ps1",
    "dev:omr": "powershell -ExecutionPolicy Bypass -File scripts\\run_omr_local.ps1",
    "dev:mobile": "powershell -ExecutionPolicy Bypass -File scripts\\run_mobile_local.ps1",
    "dev:mobile:tunnel": "powershell -ExecutionPolicy Bypass -File scripts\\run_mobile_local.ps1 -Tunnel",
    "dev:mobile:clear": "powershell -ExecutionPolicy Bypass -File scripts\\run_mobile_local.ps1 -Clear",
    "dev:fast": "powershell -ExecutionPolicy Bypass -File scripts\\launch_local.ps1 -WithMobile -Seed",
    "dev:desktop": "pnpm --filter @lms/desktop dev",
    "mobile:env:refresh": "powershell -ExecutionPolicy Bypass -File scripts\\refresh_mobile_env.ps1",
    "build:api": "pnpm --filter @lms/api build",
    "build:web": "pnpm --filter @lms/web build",
    "start:api": "pnpm --filter @lms/api start",
    "start:web": "pnpm --filter @lms/web start",
    "build:shared": "pnpm --filter @lms/shared build",
    "smoke:local": "powershell -ExecutionPolicy Bypass -File scripts\\smoke_local.ps1",
    "smoke:docker": "powershell -ExecutionPolicy Bypass -File scripts\\smoke_docker.ps1",
    "postman:env:local": "powershell -ExecutionPolicy Bypass -File scripts\\gen_postman_env.ps1 -Mode local",
    "postman:env:docker": "powershell -ExecutionPolicy Bypass -File scripts\\gen_postman_env.ps1 -Mode docker",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "electron": "^30.5.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "~19.1.0"
    }
  }
}
